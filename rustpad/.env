# Server Configuration
HOST=127.0.0.1
PORT=8080

# Database Configuration (if applicable)
DATABASE_URL=postgres://user:password@localhost/rustpad_db

# Authentication/Session Settings
SESSION_SECRET=supersecretkey  # Replace with a strong secret for session encryption
SESSION_TIMEOUT=3600  # Session timeout in seconds

# File Storage Settings
FILE_STORAGE_PATH=./storage/files  # Directory where files will be stored

# Logging Settings
LOG_LEVEL=info  # Log level (debug, info, warn, error)

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=100  # Maximum number of concurrent WebSocket connections

# Feature Toggles (Optional)
ENABLE_WASM=false  # Enable WebAssembly support
ENABLE_DESKTOP_APP=false  # Enable desktop application features

# Other Optional Configuration
STATIC_FILE_PATH=./src/static  # Directory for static files
THEME_STORAGE_PATH=./storage/themes  # Directory for storing themes
